.row
  .col-md-12
    %h1 Summary of Guessed Tags
    .row
      .col
        = link_to 'Exclude tagged', summary_tags_path(exclude_tagged: true)
    .row
      .col
        %table.table.table-striped.table-hover.table-sm
          %thead
            %tr
              %th Name
              %th Size
              - @tag_names.each do |tag_name|
                %th= tag_name
          %tbody
            - @summary.each do |tag_name, data|
              %tr
                %td= link_to tag_name, books_path(tag_name: tag_name)
                %td= data["guessed_tags_size"]
                - @tag_names.each do |tag_name|
                  %td= data[tag_name]
