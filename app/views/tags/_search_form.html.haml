.card
  .card-block
    %h4.card-title Search Tags
    = search_form_for q, url: tags_path do |f|
      - if q.name_eq.present?
        .row
          .col-sm-12
            = "Filtering with [#{q.name_eq}]"
            = link_to '(Clear)', tags_path
      .row
        .col-sm-12
          = radio_button_tag :tags_filter, 'all', params[:tags_filter].blank? || params[:tags_filter] == 'all'
          = label_tag :tags_filter_all, 'All tags'
          = radio_button_tag :tags_filter, 'exclude', params[:tags_filter] == 'exclude'
          = label_tag :tags_filter_exclude, 'Exclude tagged'
          = radio_button_tag :tags_filter, 'include', params[:tags_filter] == 'include'
          = label_tag :tags_filter_include, 'Only tagged'
      .row
        .col-sm-12
          = f.label :name_cont, 'Name'
          = f.search_field :name_cont
      .row
        .col-sm-12
          = f.submit 'Search', class: 'btn btn-secondary'
